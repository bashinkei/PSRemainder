<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="selectDate" Height="210" Width="200" Left="0" Top="0" WindowStyle="None"  Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Calendar x:Name="calendar" Grid.Row="0" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="button_OK" Content="OK" Grid.Column="0" Height="25" Width="90" />
            <Button x:Name="button_Cancel" Content="Cancel" Grid.Column="1"  Height="25" Width="90"  />
        </Grid>
    </Grid>
</Window>